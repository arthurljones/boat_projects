- model_class = Service
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @service.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @service.description
%p
  %strong= model_class.human_attribute_name(:price) + ':'
  %br
  = @service.price
%p
  %strong= model_class.human_attribute_name(:provider) + ':'
  %br
  = @service.provider
%p
  %strong= model_class.human_attribute_name(:phone) + ':'
  %br
  = @service.phone
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @service.email
%p
  %strong= model_class.human_attribute_name(:website) + ':'
  %br
  = @service.website

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), services_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_service_path(@service), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), service_path(@service), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
