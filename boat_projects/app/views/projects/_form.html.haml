= form_for @project, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_field :description, :class => 'text_field'
  .control-group
    = f.label :hours_estimate, :class => 'control-label'
    .controls
      = f.number_field :hours_estimate, :class => 'number_field'
  .control-group
    = f.label :notes, :class => 'control-label'
    .controls
      = f.text_field :notes, :class => 'text_field'
  .control-group
    = f.label :helpers_needed, :class => 'control-label'
    .controls
      = f.number_field :helpers_needed, :class => 'number_field'
  .control-group
    = f.label :liveabord_priority, :class => 'control-label'
    .controls
      = f.number_field :liveabord_priority, :class => 'number_field'
  .control-group
    = f.label :daysail_priority, :class => 'control-label'
    .controls
      = f.number_field :daysail_priority, :class => 'number_field'
  .control-group
    = f.label :cruising_priority, :class => 'control-label'
    .controls
      = f.number_field :cruising_priority, :class => 'number_field'
  .control-group
    = f.label :completed, :class => 'control-label'
    .controls
      = f.check_box :completed, :class => 'check_box'
  .control-group
    = f.label :obsolete, :class => 'control-label'
    .controls
      = f.check_box :obsolete, :class => 'check_box'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), projects_path, :class => 'btn'
