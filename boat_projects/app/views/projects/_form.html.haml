= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :hours_estimate
    = f.text_field :hours_estimate
  .field
    = f.label :notes
    = f.text_field :notes
  .field
    = f.label :helpers_needed
    = f.text_field :helpers_needed
  .field
    = f.label :liveabord_priority
    = f.text_field :liveabord_priority
  .field
    = f.label :daysail_priority
    = f.text_field :daysail_priority
  .field
    = f.label :cruising_priority
    = f.text_field :cruising_priority
  .field
    = f.label :completed
    = f.check_box :completed
  .field
    = f.label :obsolete
    = f.check_box :obsolete
  .actions
    = f.submit 'Save'
