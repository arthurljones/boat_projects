- model_class = Material
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:dimensions)
      %th= model_class.human_attribute_name(:material)
      %th= model_class.human_attribute_name(:units)
      %th= model_class.human_attribute_name(:inventory)
      %th= model_class.human_attribute_name(:price)
      %th= model_class.human_attribute_name(:minimum_purchase)
      %th= model_class.human_attribute_name(:shipping_price)
      %th= model_class.human_attribute_name(:location)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @materials.each do |material|
      %tr
        %td= link_to material.id, material_path(material)
        %td= material.type
        %td= material.description
        %td= material.dimensions
        %td= material.material
        %td= material.units
        %td= material.inventory
        %td= material.price
        %td= material.minimum_purchase
        %td= material.shipping_price
        %td= material.location
        %td=l material.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_material_path(material), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), material_path(material), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_material_path, :class => 'btn btn-primary'
