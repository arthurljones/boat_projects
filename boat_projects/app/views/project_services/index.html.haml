- model_class = ProjectService
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:project_id)
      %th= model_class.human_attribute_name(:service_id)
      %th= model_class.human_attribute_name(:quantity)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @project_services.each do |project_service|
      %tr
        %td= link_to project_service.id, project_service_path(project_service)
        %td= project_service.project_id
        %td= project_service.service_id
        %td= project_service.quantity
        %td=l project_service.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_project_service_path(project_service), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), project_service_path(project_service), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_project_service_path, :class => 'btn btn-primary'
