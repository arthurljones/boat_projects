- model_class = ProjectService
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:project_id) + ':'
  %br
  = @project_service.project_id
%p
  %strong= model_class.human_attribute_name(:service_id) + ':'
  %br
  = @project_service.service_id
%p
  %strong= model_class.human_attribute_name(:quantity) + ':'
  %br
  = @project_service.quantity

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), project_services_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_project_service_path(@project_service), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), project_service_path(@project_service), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
